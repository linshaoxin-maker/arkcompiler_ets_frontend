{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "noUnusedParameters": true,
      "declaration": true,
      "declarationDir": "./dist/types/",
      "declarationMap": true,
      "moduleResolution": "node",
      "module": "ES2015",
      "target": "ES2015",
      "baseUrl": "./",
      "types": [
        "node"
      ],
      "typeRoots": [
        "./node_modules/@types",
        "./node_modules/typescript/lib"
      ],
      "allowJs": true
    },
    "lib": ["esnext"],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "*.test.ts"
    ]
  }