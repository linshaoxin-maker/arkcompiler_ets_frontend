{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Arkguard Debug",
            "program": "--loader=ts-node/esm",
            "args": [
            "./src/cli/SecHarmony.ts",
            "${workspaceFolder}/test/grammar/toplevel_export/test2.ts",
            "--config-path",
            "${workspaceFolder}/test/grammar/toplevel_export/obfConfig.json"
            ],
            "sourceMaps": true,
            "smartStep": true,
            "console": "integratedTerminal",
            "stopOnEntry": true
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib/ArkObfuscator.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        }
    ]
}