// Example: Define a constructor return value interface (use a function or method instead)
interface Person {
  name: string;
}

interface PersonCreator {
  create(name: string): Person; 
}

class PersonImpl implements Person {
  public name: string;

  constructor(name: string) {
    this.name = name;
  }
}

class PersonCreatorImpl implements PersonCreator {

  create(name: string): PersonImpl {
    return new PersonImpl(name);
  }
}

const creator = new PersonCreatorImpl();
const person = creator.create('John');

