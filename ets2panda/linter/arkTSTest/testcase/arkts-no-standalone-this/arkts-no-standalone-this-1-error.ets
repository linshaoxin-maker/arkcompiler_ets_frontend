/* 
  Counterexample: Using this in static methods of classes.
*/
class MathUtils {
  static multiply(a: number, b: number): number {
    return this.formatResult(a * b);
  }

  static formatResult(result: number): string {
    return `The result is ${result}`;
  }
}

console.log(MathUtils.multiply(2, 3)); // Output: The result is 6
