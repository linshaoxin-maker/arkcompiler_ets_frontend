class Product {
  name: string;
  price: number;

  constructor(name: string, price: number) {
    this.name = name;
    this.price = price;
  }
}

type ProductCtor = new (name: string, price: number) => Product;

function createProduct(Ctor: ProductCtor, name: string, price: number): Product {
  return new Ctor(name, price);
}

const product = createProduct(Product, "Phone", 999);
console.log(product.name); // Phone
console.log(product.price); // 999