/* 
 * descriptionï¼šThe let keyword can be used to declare variables in a block-level scope,
 * helping programmers avoid errors. Therefore, ArkTS does not support var,
 * please declare variables with let.
 * type: Positive example
 */
function checkAge(age: number): string {
  if (age >= 18) {
    let message: string = 'You are an adult!';
    return message;
  } else {
    let message: string = 'You are a minor!';
    return message;
  }
}
