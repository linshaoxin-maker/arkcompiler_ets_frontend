// 8. ArkTS can access undeclared fields
class Person {
  public name: string;
  public age: number;
  public email: string;
  public phoneNumber: string;

  constructor(name: string, age: number, email: string,
        phoneNumber: string) {
    this.name = name;
    this.age = age;
    this.email = email;
    this.phoneNumber = phoneNumber;
  }
}

let person = new Person('John', 30, '***@example.com', '18*********');
console.log(person.unknownProperty);